<!DOCTYPE HTML>
<html lang="{{ data.languageCode }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="developer" content="Jan Werkhoven">
    <meta name="robots" content="index, follow">
    {# TODO: map all alternative links #}
    {# <link rel="alternate" href="{{data.sitemapRootUrl}}/nl/" hreflang="nl-NL"/> #}
    {# <link rel="alternate" href="{{data.sitemapRootUrl}}/en/{{path}}" hreflang="en-NL"/> #}
    {% block meta %}{% endblock %}
    <link href="/assets/css/styles.min.css" rel="stylesheet" type="text/css">
    <script src="/assets/js/scripts.min.js" type="text/javascript"></script>
    {% include "partials/favicons.html" %}
  </head>
  <body id="{% block id %}{% endblock %}">
    <header>
      <div class="inner">
        <a href="/{{data.locale}}/" id="logo">
          <img src="/assets/images/huisarts-poelstra-logo.png" alt="Logo van Huisartspraktijk Poelstra" width="234" height="143">
        </a>
        <button>Menu</button>
      </div>
    </header>
    <main>
      <div class="inner">
        <nav>
          <div class="bg-box"></div>
          <div class="bg-fade"></div>
          <div class="inner">
            <ul>
              {% for link in data.links %}
                <li>
                  <a href="{{link.url}}">{{link.label}}</a>
                </li>
              {% endfor %}
            </ul>
            {% if data.locale == 'nl' %}
              <a href="/en{% block english %}{% endblock %}" class="language en">English</a>
            {% else %}
              <a href="/nl{% block nederlands %}{% endblock %}" class="language nl">Nederlands</a>
            {% endif %}
          </div>
        </nav>
        <article>
          <div class="bg-box"></div>
          <div class="bg-fade"></div>
          <div class="inner">
            {% block main %}{% endblock %}
          </div>
        </article>
      </div>
    </main>
    {% include "partials/outdated-browsers.html" %}
  </body>
</html>
